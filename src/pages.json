{
	"lazyCodeLoading": "requiredComponents",
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/login/index"
		},
		{
			"path": "pages/index/index",
			"style": {
				"enablePullDownRefresh": true,
				"onReachBottomDistance": 100
			}
		},
		{
			"path": "pages/statistics/index"
		},
		{
			"path": "pages/my/index"
		},
		{
			"path": "pages/billDetial/index"
		},
		{
			"path": "pages/addBill/index"
		},
		{
			"path": "pages/editInfo/editName"
		},
		{
			"path": "pages/editInfo/editBudget"
		},
		{
			"path": "pages/editInfo/editLabel"
		},
		{
			"path": "pages/editInfo/editMyInfo"
		},
		{
			"path": "pages/editInfo/editClassify"
		},
		{
			"path": "pages/editInfo/editCode"
		},
		{
			"path": "pages/billDetial/classifyList"
		},
		{
			"path": "pages/use/userManual"
		},
		{
			"path": "pages/use/aboutUs"
		},
		{
			"path": "pages/use/shoppingList"
		}
	],
	"tabBar": {
		"color": "#bfbfbf", // tab 上的文字默认颜色
		"selectedColor": "#3376e5", // tab 上的文字选中时的颜色
		"borderStyle": "black", // tabbar 上边框的颜色，可选值 black/white
		"backgroundColor": "#ffffff", // tab 的背景色
		"list": [
			{ // 最少2个、最多5个 tab
				"pagePath": "pages/index/index", // 页面路径，必须在 pages 中先定义
				"iconPath": "static/tabbar/index.png", // 图片路径，icon 大小限制为40kb，建议尺寸为 81px * 81px
				"selectedIconPath": "static/tabbar/indexFilled.png", // 选中时的图片路径
				"text": "记账" // tab 上按钮文字
			},
			{
				"pagePath": "pages/statistics/index",
				"iconPath": "static/tabbar/static.png",
				"selectedIconPath": "static/tabbar/staticFilled.png",
				"text": "统计"
			},
			{
				"pagePath": "pages/my/index",
				"iconPath": "static/tabbar/my2.png",
				"selectedIconPath": "static/tabbar/my2Filled.png",
				"text": "我的"
			}
		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "简易记",
		"navigationBarBackgroundColor": "#ffffff",
		"backgroundColor": "#F8F8F8",
		"dynamicRpx": true,
		// #ifdef  H5
		"navigationStyle": "custom"
		//  #endif
	}
}